<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="655dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="264dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="179dp"
                android:layout_height="226dp"
                android:contentDescription="@string/minibat"
                android:paddingTop="50dp"
                app:srcCompat="@drawable/robbin" />

            <TextView
                android:id="@+id/txtrobin"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:ems="11"
                android:fontFamily="@font/alfa_slab_one"
                android:hint="@string/robin"
                android:paddingStart="250dp"
                android:paddingTop="80dp"
                android:paddingEnd="80dp" />

            <TextView
                android:id="@+id/txtnome5"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:ems="12"
                android:fontFamily="@font/alfa_slab_one"
                android:hint="@string/nome"
                android:paddingStart="200dp"
                android:paddingTop="150dp" />

            <TextView
                android:id="@+id/txtespecie5"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:ems="12"
                android:fontFamily="@font/alfa_slab_one"
                android:hint="@string/especie"
                android:paddingStart="200dp"
                android:paddingTop="210dp" />

            <TextView
                android:id="@+id/txtcodigo5"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:ems="12"
                android:fontFamily="@font/alfa_slab_one"
                android:hint="@string/codigo"
                android:paddingStart="200dp"
                android:paddingTop="240dp" />

            <TextView
                android:id="@+id/txtcodinome5"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:ems="12"
                android:fontFamily="@font/alfa_slab_one"
                android:hint="@string/codinome"
                android:paddingStart="200dp"
                android:paddingTop="180dp" />

            <TextView
                android:id="@+id/txtrobinname"
                android:layout_width="139dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="263dp"
                android:layout_marginTop="151dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="55dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txthabilidade9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:hint="@string/habilidades"
            android:paddingStart="20dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/txtvulnerabilidade5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:hint="@string/vulnerabilidades"
            android:paddingStart="20dp"
            android:paddingTop="20dp" />

        <TextView
            android:id="@+id/txthabilidade10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alfa_slab_one"
            android:hint="@string/equipamentos"
            android:paddingStart="20dp"
            android:paddingTop="20dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>